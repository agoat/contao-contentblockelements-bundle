{
    "name": "agoat/contao-contentelements",
    "type": "contao-bundle",
    "description": "Contao content elements extension",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Arne Stappen",
            "homepage": "https://github.com/agoat"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/framework-bundle": "^3.3",
        "contao/core-bundle": "^4.4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "replace": {
        "contao-legacy/contentblocks": "*",
        "agoat/contao-contentblocks": "*"
    },
    "autoload": {
        "psr-4": {
            "Agoat\\ContentElementsBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates"
        ]
    }
 }
